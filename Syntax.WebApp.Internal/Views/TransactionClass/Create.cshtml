@model Syntax.WebApp.Internal.Models.TransactionClass
@using System.IO

<h4>TransactionClass</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconFile" class="control-label"></label>
                <input asp-for="IconFile" type="file" class="form-control" />
                <span asp-validation-for="IconFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    @foreach (var file in ViewBag.FileList)
                    {
                        var imagePath = Url.Content($"~/Assets/{file.FileName}");
                        <div class="col-md-3">
                            <label>
                                <input type="radio" name="Icon" value="@imagePath" />
                                <img src="@imagePath" width="50" height="50" />
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
