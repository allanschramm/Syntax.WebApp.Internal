@model Syntax.WebApp.Internal.Models.AssetClass

@{
    ViewData["Title"] = "Create";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm">
                <div class="row">
                    <div class="col-md">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" required />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="finance-emoji-select">Selecione um emoji financeiro:</label>
                                <select asp-for="Icon" class="form-control" id="finance-emoji-select">
                                    <option value="💰"><i class="fas fa-money-bill"></i> 💰 Dinheiro</option>
                                    <option value="💳"><i class="fas fa-credit-card"></i> 💳 Cartão de crédito</option>
                                    <option value="🏦"><i class="fas fa-university"></i> 🏦 Banco</option>
                                    <option value="💸"><i class="fas fa-money-check-alt"></i> 💸 Cheque</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <a asp-action="Index" class="btn btn-secondary">@Localizer["Back"]</a>
                                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
